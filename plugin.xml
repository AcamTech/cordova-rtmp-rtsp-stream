		<resource-file src="src/android/res/drawable-xxxhdpi/ic_switch_camera_white_36dp.png" target="res/drawable-xxxhdpi/ic_switch_camera_white_36dp.png" />
		<resource-file src="src/android/res/drawable-xxxhdpi/ic_videocam_off_white_36dp.png" target="res/drawable-xxxhdpi/ic_videocam_off_white_36dp.png" />
